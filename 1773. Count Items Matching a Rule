var countMatches = function(items, ruleKey, ruleValue) {
   var count=0;
   for(var i=0;i<items.length;i++)
   {   
       if(ruleKey=="type")
       {
            if(items[i][0]== ruleValue)
           {
               count++;
           }
       
       }
       else if(ruleKey=="color")
       {
           if(items[i][1]== ruleValue)
           {
               count++;
           }
       }
       else{
            if(items[i][2]== ruleValue)
           {
               count++;
           }
       }
      
   }
   return count;
};
